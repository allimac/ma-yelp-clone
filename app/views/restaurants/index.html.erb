<% if @restaurants.all.any? %>
<% @restaurants.all.each do |restaurant| %>
<h2><%= link_to restaurant.name, restaurant_path(restaurant) %></h2>
<p>
  <% if @current_user && restaurant.was_created_by?(@current_user) %>
    <%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %>
    <%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete %>
  <% end %>
  <% unless @current_user && @current_user.has_reviewed?(restaurant) %>
    <%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant)%>
  <% end %>
</p>
<h3>Reviews for <%= restaurant.name %></h3>
<% if restaurant.reviews.any? %>
<ul>
  <% restaurant.reviews.each do |review| %>
    <li>
      <%= review.thoughts %>, <strong><%= review.rating %></strong>/5
      <% if @current_user && @current_user.has_reviewed?(restaurant) %>
        <%= link_to "Delete review", restaurant_review_path(restaurant, review), method: :delete %>
      <% end %>
    </li>
  <% end %>
</ul>
<% else %>
  <p>No reviews yet</p>
<% end %>
<% end %>
<% else %>
<h1>No restaurants yet</h1>
<% end %>

<a href="/restaurants/new">Add a restaurant</a>
